<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/styles.css" ><!-- Import debe ser "../algo" para este caso -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/ol@latest/dist/ol.js"></script>
    <title>Lista de Rutas</title>
    <style>
      .map-container {
        margin: 0;
        width: 100%;
        height: 400px;
        font-family: sans-serif;
        background-color: #04041b;
      }
      #tools a {
        display: inline-block;
        padding: 0.5rem;
        background: white;
        cursor: pointer;
      }
    </style>
</head>
<body>
    <div class="name"> 
        <img src="../img/noFondologoCucutaRutas.png" class="imagenLogo" alt=""> <!-- Import debe ser "../algo" para este caso -->
            <div class="content">   
                <h2>Listado de rutas</h2>
                <% if (loginOn) { %>
                  <div class="mi-boton-volver"> 
                    <a href="/logout"class="btn btn-success form-control">Cerrar Sesion</a>
                  </div>
                <% } else{ %>
                  <div class="mi-boton"> 
                    <a href="/login"class="btn btn-danger form-control">Iniciar Sesion</a>
                  </div>
                <% } %>
            </div> 
    </div> 

    <div class="info">
        <p class="titulo_secciÃ³n"> Lista de todas las Rutas disponibles</p>
        <div class="list-group">
          <% if (rutas) { %>
            <% rutas.forEach(function(ruta){ %>
                <div id="ruta-<%= ruta.id %>" class="list-group-item list-group-item-action" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"><%= ruta.nombre %></h5>
                    </div>
                    <p class="mb-1">Duracion: <%= ruta.duracion %></p>
                    <p class="mb-1">Hora de inicio: <%= ruta.horaInicio %></p>
                    <p class="mb-1">Hora de fin: <%= ruta.horaFin %></p>
                    <p class="mb-1">Frecuencia: <%= ruta.frecuencia %></p>
                    <div class = "map-container" id="map-<%= ruta.id %>"></div>
                </div>
            <% }); %>
          <% } %>
        </div>
    </div>  
    <script src="../js/mapaConsulta.js" type="module"></script>
</body>
</html>
