<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
  <title>CRUD</title>
</head>
<body>
  <div class="container">
    <div class="row mt-3">
      <div class="col-6">
        <img src=".../img/noFondologoCucutaRutas.png" class="img-fluid" alt="Logo">
      </div>
      <div class="col-6 text-end">
        <h2>Administradores</h2>
        <a href="/logout" class="btn btn-success">Cerrar Sesión</a>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col text-end">
        <a href="/sadmin/administrador/add" class="btn btn-primary">Agregar</a>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col">
        <% if (success) { %>
        <div class="alert alert-primary" role="alert">
          Tarea realizada correctamente
        </div>
        <% } else if (success == false) { %>
        <div class="alert alert-primary" role="alert">
          La tarea no se pudo realizar
        </div>
        <% } %>

        <table class="table table-striped table-bordered">
          <thead class="table-primary">
            <tr>
              <th>Id</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Correo</th>
              <th>Acción</th>
            </tr>
          </thead>
          <tbody>
            <% if (administradores) { %>
            <% administradores.forEach(function(administrador) { %>
            <tr>
              <td><%= administrador.id %></td>
              <td><%= administrador.nombre %></td>
              <td><%= administrador.apellido %></td>
              <td><%= administrador.correo %></td>
              <td>
                <form method="post" action="/sadmin/administrador/delete/<%= administrador.id %>" class="d-inline">
                  <input type="hidden" name="extra_submit_param" value="extra_submit_value">
                  <button type="submit" name="submit_param" value="submit_value" class="btn btn-danger">Eliminar</button>
                </form>
                <form method="post" action="/sadmin/administrador/update/<%= administrador.id %>" class="d-inline">
                  <input type="hidden" name="extra_submit_param" value="extra_submit_value">
                  <button type="submit" name="submit_param" value="submit_value" class="btn btn-primary">Actualizar</button>
                </form>
              </td>
            </tr>
            <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
